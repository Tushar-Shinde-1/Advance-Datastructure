void displaypreorder(Node *ro)
{
	if(ro==NULL)
	{
	return;
	}
	else
	{
	cout<<"name :"<<ro->name<<"\n";
	cout<<"age  :"<<ro->age<<endl;
	displaypreorder(ro->left);
	displaypreorder(ro->right);
	}
	
	}
	
void displayinorder(Node *ro)
{
	if(ro==NULL)
	{
	return;
	}
	else
	{
	
	displayinorder(ro->left);
	cout<<"name :"<<ro->name<<"\n";
	cout<<"age  :"<<ro->age<<endl;
	displayinorder(ro->right);
	}
	
	}

